<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/EdtName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Name Here"/>

        <EditText
            android:id="@+id/EdtSurname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Surname Here"/>

        <EditText
            android:id="@+id/EdtEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Email Address Here"/>

        <EditText
            android:id="@+id/EdtIDNumber"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your ID Number Here"/>

        <EditText
            android:id="@+id/EdtUsername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Username Here"/>

        <EditText
            android:id="@+id/EdtPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Password Here"/>

        <EditText
            android:id="@+id/EdtConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Confirm Password Here"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:onClick="register"
            android:background="@drawable/ic_button_background"
            android:text="Sign Up"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>