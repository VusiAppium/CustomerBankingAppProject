<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtEmploymentLevel"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Employment Level Here"/>

        <EditText
            android:id="@+id/edtPosition"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Position Here"/>


        <EditText
            android:id="@+id/edtCompanyName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Company Name Here"/>

        <EditText
            android:id="@+id/edtEmploymentStartDate"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Start Date Here"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:onClick="workDetails"
            android:background="@drawable/ic_button_background"
            android:text="Next"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>