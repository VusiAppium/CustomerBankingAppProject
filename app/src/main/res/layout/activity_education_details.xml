<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtQualificationObtained"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Tertiary Qualifications Here"/>

        <EditText
            android:id="@+id/edtTertiary"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Tertiary Institution Here"/>


        <EditText
            android:id="@+id/edtProvinceObtained"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Province Here"/>

        <EditText
            android:id="@+id/edtYearObtained"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter the year of qualification  Here"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:onClick="addressDetails"
            android:background="@drawable/ic_button_background"
            android:text="Next"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>