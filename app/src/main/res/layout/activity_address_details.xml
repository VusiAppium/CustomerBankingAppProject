<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AddressDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtAddressLine1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Address Line 1 Here"/>

        <EditText
            android:id="@+id/edtAddressLine2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Address Line 2 Here"/>


        <EditText
            android:id="@+id/edtCity"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter City Here"/>

        <EditText
            android:id="@+id/edtProvince"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Province Here"/>

        <EditText
            android:id="@+id/edtPostalCode"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Enter Your Postal Code Here"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:onClick="addressDetails"
            android:background="@drawable/ic_button_background"
            android:text="Next"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>